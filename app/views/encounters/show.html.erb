			var url = this.href;
			var restitle = this.title;
			var dialog = $('<div style="display:hidden"></div>').appendTo('body');
			dialog.load(
				url, 
				{},
				function (responseText, textStatus, XMLHttpRequest) {
					dialog.dialog({
