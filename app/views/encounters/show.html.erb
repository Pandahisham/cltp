<form class="encounter">
<fieldset>
<p>
  <label>Date:</label><br />
  <span class="item">05/24/2010</span>
</p>

<p>
  <label>Student:</label><br />
  <span class="item"><%=h @encounter.student %> </span>
</p>

<p>
  <label>Clerkship:</label><br />
  <span class="item"><%=h @encounter.clerkship %> </span>
</p>

<p>
  <label>Site:</label><br />
  <span class="item">Taubman</span>
</p>
</fieldset>

<fieldset>
<p>
  <label>Patient id:</label><br />
  <span class="item"><%=h @encounter.pid %> </span>
</p>

<p>
  <label>Age:</label><br />
  <span class="item"><%=h @encounter.age %> </span>
</p>

<p>
  <label>Gender:</label><br />
  <span class="item"><%=h @encounter.gender %> </span>
</p>

<p>
  <label>Patient type:</label><br />
  <span class="item">Newborn </span>
</p>
</fieldset>

<fieldset>

<p>
	<label>Patient History:</label><br />
	<span class="item">Observed</span>
</p>

<p>
	<label>Physical Exam:</label><br />
	<span class="item">Performed</span>
</p>

<div style="clear:both;">&nbsp;</div>

<p>
  <label>Primary Problem:</label><br />
  <span class="item"><%=h @encounter.chief_complaint %> </span>
</p>

<p>
  <label>Secondary Problems:</label><br />
  <span class="item">
  	<ul class="grid_item">
  	<% @sps = @encounter.co_mobidity.split(', '); %>
  	<% @sps.each do |sp| %>
  	<li><%= sp %></li>
  	<% end %>
  	</ul>
  </span>
</p>

<p>
  <label>Procedures Performed:</label><br />
  <span class="item">
  	<ul class="grid_item">
  	<li>Suturing Wound/Closure</li>
  	<li>Warts</li>
  	</ul>
  </span>
</p>

<p>
  <label>Procedures Observed:</label><br />
  <span class="item">
  	<ul class="grid_item">
  	<li>Lumbar Puncture</li>
  	<li>I/V Placement</li>  	
  	</ul>
  </span>
</p>

</fieldset>

<fieldset>

<p>
	<label>Notes</label><br />
	<span class="item"></span>
</p>
	
</fieldset>

</form>

