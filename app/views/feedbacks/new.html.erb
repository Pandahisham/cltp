<div class="yui-gc">

<div class="yui-u first">

<h1>Please type in your feedback in the box below</h1>

<% form_for(@feedback, :html => { :class  => "encounter"})  do |f| %>
  <%= f.error_messages %>

<fieldset class="outline2 bg5" style="padding-top: 10px">
<div style="clear:both"></div>
  <p>
    <%= f.text_area :body, :cols => "80", :class => "required" %>
  </p>
</fieldset>

<fieldset class="outline2 bg5" style="background-color: #FFF; border: 0; float: right;">
    	<a class="ui-corner-all bt3 submit_encounter" href="#">Save</a>
		<%= link_to "Cancel and Return", root_path, :class => 'ui-corner-all bt3' %>
</fieldset>

<% end %>
</div> <!-- end yui-u first -->

<div class="yui-u">
</div> <!-- end yui-u -->

</div> <!-- end yui-ge -->

<script type="text/javascript" charset="utf-8">
	$(function() {
		$('.submit_encounter').click(function() {
			$('#new_feedback').submit();
		});
		
		$("#new_feedback").validate();
		
	});
</script>